    <script>
        // DOM Elements
        const uploadArea = document.getElementById('uploadArea');
        const fileInput = document.getElementById('fileInput');
        const originalPreview = document.getElementById('originalPreview');
        const convertedPreview = document.getElementById('convertedPreview');
        const originalSize = document.getElementById('originalSize');
        const convertedSize = document.getElementById('convertedSize');
        const originalDimensions = document.getElementById('originalDimensions');
        const convertedDimensions = document.getElementById('convertedDimensions');
        const originalFormat = document.getElementById('originalFormat');
        const convertedFormat = document.getElementById('convertedFormat');
        const qualitySlider = document.getElementById('qualitySlider');
        const qualityValue = document.getElementById('qualityValue');
        const formatOptions = document.querySelectorAll('.format-option');
        const convertBtn = document.getElementById('convertBtn');
        const downloadBtn = document.getElementById('downloadBtn');
        const conversionProgress = document.getElementById('conversionProgress');
        const notification = document.getElementById('notification');
        const mobileMenuBtn = document.querySelector('.mobile-menu-btn');
        const navMenu = document.querySelector('nav ul');

        // Variables
        let currentImage = null;
        let originalImageData = null;
        let convertedImageData = null;
        let selectedFormat = 'webp';
        let originalWidth = 0;
        let originalHeight = 0;

        // Event Listeners
        uploadArea.addEventListener('click', () => fileInput.click());
        uploadArea.addEventListener('dragover', (e) => {
            e.preventDefault();
            uploadArea.style.borderColor = '#4a6cf7';
            uploadArea.style.backgroundColor = '#f0f4ff';
        });
        uploadArea.addEventListener('dragleave', () => {
            uploadArea.style.borderColor = '#d1d8e0';
            uploadArea.style.backgroundColor = '#f8fafc';
        });
        uploadArea.addEventListener('drop', (e) => {
            e.preventDefault();
            uploadArea.style.borderColor = '#d1d8e0';
            uploadArea.style.backgroundColor = '#f8fafc';
            
            if (e.dataTransfer.files.length) {
                handleImageUpload(e.dataTransfer.files[0]);
            }
        });

        fileInput.addEventListener('change', (e) => {
            if (e.target.files.length) {
                handleImageUpload(e.target.files[0]);
            }
        });

        qualitySlider.addEventListener('input', () => {
            qualityValue.textContent = `${qualitySlider.value}%`;
        });

        formatOptions.forEach(option => {
            option.addEventListener('click', () => {
                formatOptions.forEach(opt => opt.classList.remove('active'));
                option.classList.add('active');
                selectedFormat = option.getAttribute('data-format');
            });
        });

        convertBtn.addEventListener('click', convertImage);
        downloadBtn.addEventListener('click', downloadImage);
        mobileMenuBtn.addEventListener('click', () => {
            navMenu.classList.toggle('show');
        });

        // Functions
        function handleImageUpload(file) {
            if (!file.type.match('image.*')) {
                alert('Please select an image file.');
                return;
            }

            const reader = new FileReader();
            reader.onload = (e) => {
                originalImageData = e.target.result;
                currentImage = new Image();
                currentImage.onload = () => {
                    originalWidth = currentImage.width;
                    originalHeight = currentImage.height;
                    
                    originalPreview.src = originalImageData;
                    originalSize.textContent = formatFileSize(file.size);
                    originalDimensions.textContent = `${currentImage.width} × ${currentImage.height}`;
                    originalFormat.textContent = file.type.split('/')[1].toUpperCase();
                    
                    // Reset converted preview
                    convertedPreview.src = '';
                    convertedSize.textContent = '0 KB';
                    convertedDimensions.textContent = '-';
                    convertedFormat.textContent = '-';
                    downloadBtn.disabled = true;
                    conversionProgress.style.width = '0%';
                };
                currentImage.src = originalImageData;
            };
            reader.readAsDataURL(file);
        }

        function convertImage() {
            if (!currentImage) {
                alert('Please upload an image first.');
                return;
            }

            // Simulate conversion process
            conversionProgress.style.width = '0%';
            let progress = 0;
            const interval = setInterval(() => {
                progress += 5;
                conversionProgress.style.width = `${progress}%`;
                
                if (progress >= 100) {
                    clearInterval(interval);
                    
                    // Calculate simulated file size based on format
                    const originalSizeValue = parseFloat(originalSize.textContent);
                    let sizeMultiplier = 1.0;
                    
                    // Different formats have different typical compression ratios
                    switch(selectedFormat) {
                        case 'jpeg':
                            sizeMultiplier = 0.7; // JPEG typically compresses well
                            break;
                        case 'png':
                            sizeMultiplier = originalFormat.textContent.toLowerCase() === 'png' ? 1.0 : 1.2; // PNG can be larger for photos
                            break;
                        case 'webp':
                            sizeMultiplier = 0.6; // WebP typically compresses better
                            break;
                        case 'gif':
                            sizeMultiplier = originalFormat.textContent.toLowerCase() === 'gif' ? 1.0 : 1.5; // GIF can be larger for photos
                            break;
                    }
                    
                    // Adjust based on quality setting
                    const quality = parseInt(qualitySlider.value) / 100;
                    const convertedSizeValue = originalSizeValue * sizeMultiplier * (1.1 - quality * 0.2);
                    
                    convertedSize.textContent = formatFileSize(convertedSizeValue * 1024); // Convert to bytes
                    convertedDimensions.textContent = `${originalWidth} × ${originalHeight}`;
                    convertedFormat.textContent = selectedFormat.toUpperCase();
                    
                    // For demo purposes, we'll just use the original image
                    // In a real implementation, you would generate the converted version
                    convertedPreview.src = originalImageData;
                    
                    downloadBtn.disabled = false;
                    
                    // Show notification
                    notification.classList.add('show');
                    setTimeout(() => {
                        notification.classList.remove('show');
                    }, 3000);
                }
            }, 50);
        }

        function downloadImage() {
            if (!convertedPreview.src) return;
            
            // In a real implementation, you would use the actual converted image data
            // For this demo, we'll create a download link with the original image
            const link = document.createElement('a');
            link.download = `converted-image.${selectedFormat}`;
            link.href = convertedPreview.src;
            link.click();
        }

        function formatFileSize(bytes) {
            if (bytes === 0) return '0 Bytes';
            const k = 1024;
            const sizes = ['Bytes', 'KB', 'MB', 'GB'];
            const i = Math.floor(Math.log(bytes) / Math.log(k));
            return parseFloat((bytes / Math.pow(k, i)).toFixed(2)) + ' ' + sizes[i];
        }

        // Initialize the page
        document.addEventListener('DOMContentLoaded', () => {
            // Any initialization code can go here
        });
    </script>
</body>
</html>
